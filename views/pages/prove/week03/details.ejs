<!DOCTYPE html>
<html>

<head>
  <% include ../../../includes/header.ejs %>
  <k src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></k>
  <link rel="stylesheet" href="/stylesheets/week03.css"></link>
</head>

<body>
  <% include ../../../includes/nav.ejs %>
    <div class="container my-5">

      <a href="/prove/week03" class="d-flex font-weight-bold text-primary mb-3">
        <i class="material-icons">arrow_back</i>
        <span>Back</span>
        </a>
      
        
        <div class="d-flex border p-3">
          <div class="img-thumbnail mr-3" style="background-image: url(<%= user.avatar %>);" ></div>
          <div>
            <h1 class="m-0 font-weight-bolder"><%= user.first_name %> <%= user.last_name %></h1>
            <h3 class="font-weight-bolder"><%= user.job_function %></h3>
            <h5 class="m-0 d-flex">
              <i class="material-icons mr-2">
                school
              </i>    
              Education
            </h5>
            <p class="ml-1 text-black-50 small"><%= user.education %></p>
            <h5 class="m-0 d-flex">
              <i class="material-icons mr-2">
                home
              </i>      
              Address
            </h5>
            <p class="mb-0 ml-1 text-black-50 small"><%= user.street %></p>
            <p class="ml-1 text-black-50 small"><%= user.city %></p>
            
            <h5 class="m-0">Contact</h5>
            <div class="d-flex">
              <i class="material-icons">
                phone
              </i>                
              <a class="ml-2 text-primary" href="tel:<%= user.phone %>"><%= user.phone %></a>
            </div>
            <div class="d-flex">
              <i class="material-icons">
                email
              </i>                
              <a class="ml-2 text-primary" href="mailto:<%= user.email %>"><%= user.email %></a>
            </div>
          </div>
      </div>

    </div>

</body>

</html>