<!DOCTYPE html>
<html>

<head>
  <% include ../../includes/header.ejs %>
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script src="/scripts/week10.mjs" type="module"></script>
</head>

<body>
  <% include ../../includes/nav.ejs %>
  <div class="container mt-5">

    <div class="row">
      <div class="col-8">
        <form class="border mb-5 p-4 rounded" id="heroForm">
          <div class="form-group mr-3">
            <label class="font-weight-bold" for="name">Name</label>
            <input type="text" class="form-control"id="name" name="name">
          </div>
          <div class="form-group mr-3">
            <label class="font-weight-bold" for="heroName">Hero Name</label>
            <input type="text" class="form-control"id="heroName" name="heroName">
          </div>
          <div class="form-group mr-3">
            <label class="font-weight-bold" for="age">Age</label>
            <input type="number" step="1" min="0" max="100" class="form-control"id="age" name="age">
          </div>
          <div class="form-group mr-3">
            <label class="font-weight-bold" for="publisher">Publisher</label>
            <select class="custom-select" name="publisher" id="publisher">
              <option value="" selected>Select a comic publisher</option>
              <option value="Marvel Comics">Marvel Comics</option>
              <option value="DC Entertainment">DC Entertainment</option>
              <option value="Image Comics">Image Comics</option>
              <option value="IDW Publishing">IDW Publishing</option>
              <option value="Dark Horse Comics">Dark Horse Comics</option>
            </select>
          </div>
          <input type="hidden" value="<%= csrfToken %>" name="_csrf">
          <button id="submitBtn" type="button" class="btn btn-primary">Add</button>
        </form>
    
        <div class="alert alert-danger mt-3" role="alert" id="error" style="display: none;"></div>
        <div class="alert alert-success mt-3" role="alert" id="success" style="display: none;"></div>
      </div>
      <div class="col-4">
        <div class="card">
          <div class="card-header">
           <strong>Comic Heroes</strong> 
          </div>
          <ul id="heroesList" class="list-group list-group-flush"></ul>
        </div>
      </div>
    </div>




  </div>

 
</body>

</html>