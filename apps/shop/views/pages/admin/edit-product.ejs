<!DOCTYPE html>
<html>
<head>
  <% include ../../includes/header.ejs %>
</head>

<body>
  <% include ../../includes/nav.ejs %>

  <main class="container my-4">
    <h1><%= title %> <%= product.title %></h1>
    <form class="border rounded p-4" action="/shop/admin/edit-product" method="POST">
      <input type="hidden" name="productId" value="<%= product._id %>">
      <div class="form-group mr-3">
        <label class="font-weight-bold" for="title">Title</label>
        <input type="text" value="<%= product.title %>" class="form-control" id="title" name="title" aria-describedby="titleRequired" required>
        <small id="titleRequired" class="form-text text-danger">*Required field</small>
      </div>
      <div class="form-group mr-3">
        <label class="font-weight-bold" for="price">Price</label>
        <input value="<%= product.price %>" type="number" min="0.01" max="9999.99" step="0.01" class="form-control" id="price" name="price" aria-describedby="priceRequired" required>
        <small id="priceRequired" class="form-text text-danger">*Required field</small>
      </div>
      <div class="form-group mr-3">
        <label class="font-weight-bold" for="imageUrl">Image URL</label>
        <input type="text" class="form-control" value="<%= product.imageUrl %>" id="imageUrl" name="imageUrl">
      </div>
      <div class="form-group">
        <label class="font-weight-bold" for="description">Description</label>
        <textarea type="text" class="form-control" id="description" name="description" aria-describedby="descriptionRequired" required><%= product.description %></textarea>
        <small id="descriptionRequired" class="form-text text-danger">*Required field</small>
      </div>
      <div class="text-right">
        <input type="hidden" value="<%= csrfToken %>" name="_csrf">
        <button type="submit" class="btn btn-primary" type="button">Edit Product</button>
      </div>
  
    </form>
  </main>

</body>
</html>